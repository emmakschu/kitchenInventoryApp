<h1>Update an item in the database</h1>

<%= form_for @food_item do |f| %>

	<p>Item name: <%= f.text_field :name %></p>
	<p>Order #: <%= f.text_field :orderNo %></p>
	<p>Price: <%= f.number_field :unitPrice, :step => 0.01 %></p>
	<p>Unit Size: <%= f.number_field :unitSize, :step => 0.00001 %> &nbsp;
		<%= f.select :unitType, options_for_select([
			['fl oz.', 1],
			['gal.', 2],
			['l', 3],
			['oz.', 4],
			['lb.', 5],
			['g', 6]
		]) %>
	</p>
	<p>Locations: <%= f.text_field :locations %></p>
	
	<p><%= f.submit "Update item" %></p>

<% end %>
